<?xml version="1.0" encoding="UTF-8"?>
<DataTemplate xmlns="http://xamarin.com/schemas/2014/forms" 
              xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              x:Class="Strawberry.MobileApp.Pages.Main.MainPage_View11">
	<StackLayout FlexLayout.Basis="100%" Padding="10" Orientation="Horizontal" Spacing="10" BackgroundColor="#EBF4FF">
		<!-- 경고 아이콘 -->
		<Image VerticalOptions="Center" WidthRequest="30" HeightRequest="30" Source="icon_exclamation" Aspect="AspectFit"/>
		<!-- 안내 메시지 -->
		<Label VerticalOptions="Center" HorizontalOptions="StartAndExpand" Text="대화리스트는 밀어서 삭제 가능합니다."/>
		<!-- 사람 아이콘 -->
		<Image VerticalOptions="Center" WidthRequest="24" HeightRequest="24" Source="icon_person" Aspect="AspectFit"/>
	</StackLayout>
</DataTemplate>
